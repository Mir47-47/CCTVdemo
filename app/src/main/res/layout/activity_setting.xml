<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 타이틀 및 + 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- 이 레이아웃이 나머지 공간 전체를 차지하게 만듭니다 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:text="Voice Samples"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/autorenew_24px"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="샘플 추가"
            android:padding="12dp" />
    </LinearLayout>

    <!-- 영상 재생 영역 -->
    <FrameLayout
        android:id="@+id/videoContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:background="#000000"
        android:foregroundGravity="center">

        <View
            android:id="@+id/videoPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />

        <VideoView
            android:id="@+id/setVideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_play_voice_sample"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/image_button_background"
                android:src="@drawable/play_arrow_48px"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:elevation="6dp" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_image_button"
                android:gravity="center"
                android:text="목소리 전달"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textAlignment="center" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>